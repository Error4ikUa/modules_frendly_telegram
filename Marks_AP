from .. import loader, utils
import asyncio

class SpizdMod(loader.Module):
    strings = {
        "name": "Spizd",
        "description": "üì• –°–∫–∞—á—É–≤–∞–Ω–Ω—è –º–µ–¥—ñ–∞ –∑ Pinterest, Instagram, TikTok.",
        "usage": ".spizd <–ø–æ—Å–∏–ª–∞–Ω–Ω—è> ‚Äî –∑–∞–≤–∞–Ω—Ç–∞–∂—É—î –≥–∞–ª–µ—Ä–µ—ó –∞–±–æ –≤—ñ–¥–µ–æ –∑ –∞—É–¥—ñ–æ –∑ –≤–∫–∞–∑–∞–Ω–æ–≥–æ –¥–∂–µ—Ä–µ–ª–∞ (Pinterest, Instagram, TikTok)."
    }

    async def client_ready(self, client, db):
        self.client = client

    async def spizdcmd(self, message):
        args = utils.get_args_raw(message)
        if not args:
            await message.edit("‚ùå –í–∫–∞–∂—ñ—Ç—å –ø–æ—Å–∏–ª–∞–Ω–Ω—è –Ω–∞ –∫–æ–Ω—Ç–µ–Ω—Ç.")
            return

        bot_entity = "@SaveAsBot"
        await message.edit("‚è≥ –ó–∞–≤–∞–Ω—Ç–∞–∂—É—î–º–æ –≥–∞–ª–µ—Ä–µ—ó... üì§")
        await asyncio.sleep(2)
        await message.edit("üîû –õ—è, –∑–±–æ—á–µ–Ω–µ—Ü—å! –¢–æ–±—ñ —â–æ, –º–µ–¥—ñ–∞ –º–∞–ª–æ? üòÇ")
        await asyncio.sleep(2)
        await message.edit("ü§∑‚Äç‚ôÇÔ∏è –ï—Ö, –Ω—É –ª–∞–¥–Ω–æ... –¢—Ä–∏–º–∞–π —Å–≤–æ—ó —Ñ–∞–π–ª–∏ üòè")

        await self.client.send_message(bot_entity, args)
        await asyncio.sleep(10)

        sent_media = []
        async for response in self.client.iter_messages(bot_entity, limit=10):
            if response.video:
                sent_media.append(response.video)
                async for doc in self.client.iter_messages(bot_entity, reply_to=response.id, limit=5):
                    if doc.document and doc.document.mime_type == "audio/mpeg":
                        sent_media.append(doc.document)
                        break
            elif response.photo:
                sent_media.append(response.photo)
            elif response.document and response.document.mime_type == "audio/mpeg":
                sent_media.append(response.document)

        if sent_media:
            for media in sent_media:
                await message.respond(file=media)
            await message.delete()
        else:
            await message.edit("‚ö†Ô∏è –ù–µ –≤–¥–∞–ª–æ—Å—è –∑–Ω–∞–π—Ç–∏ –≥–∞–ª–µ—Ä–µ—ó –∑–∞ —Ü–∏–º –ø–æ—Å–∏–ª–∞–Ω–Ω—è–º. –°–ø—Ä–æ–±—É–π—Ç–µ —â–µ —Ä–∞–∑!")
