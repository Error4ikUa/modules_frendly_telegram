from .. import loader, utils
import asyncio

class SpizdMod(loader.Module):
    strings = {
        "name": "Spizd",
        "description": "üì• –°–∫–∞—á—É–≤–∞–Ω–Ω—è –º–µ–¥—ñ–∞ –∑ Pinterest, Instagram, TikTok.",
        "usage": ".spizd <–ø–æ—Å–∏–ª–∞–Ω–Ω—è> ‚Äî –∑–∞–≤–∞–Ω—Ç–∞–∂—É—î –º–µ–¥—ñ–∞ –∑ –≤–∫–∞–∑–∞–Ω–æ–≥–æ –¥–∂–µ—Ä–µ–ª–∞ (Pinterest, Instagram, TikTok)."
    }

    async def client_ready(self, client, db):
        self.client = client

    async def spizdcmd(self, message):
        args = utils.get_args_raw(message)
        if not args:
            await message.edit("‚ùå –í–∫–∞–∂—ñ—Ç—å –ø–æ—Å–∏–ª–∞–Ω–Ω—è –Ω–∞ –∫–æ–Ω—Ç–µ–Ω—Ç.")
            return

        bot_entity = "@SaveAsBot"
        await message.edit("‚è≥ –ó–∞–≤–∞–Ω—Ç–∞–∂—É—î–º–æ –ø–æ—Ä–Ω–æ—Ñ–æ–Ω–¥–µ–π—à–Ω... üì§")
        await asyncio.sleep(2)
        await message.edit("üîû –õ—è, –∑–±–æ—á–µ–Ω–µ—Ü—å! –¢–æ–±—ñ —â–æ, –º–µ–¥—ñ–∞ –º–∞–ª–æ? üòÇ")
        await asyncio.sleep(2)
        await message.edit("ü§∑‚Äç‚ôÇÔ∏è –ï—Ö, –Ω—É –ª–∞–¥–Ω–æ... –¢—Ä–∏–º–∞–π —Å–≤–æ—ó —Ñ–∞–π–ª–∏ üòè")

        await self.client.send_message(bot_entity, args)
        await asyncio.sleep(7)

        async for response in self.client.iter_messages(bot_entity, limit=5):
            if response.video and response.video.sender_id != self.client.me.id:
                await message.respond(file=response.video)
                if response.document and response.document.mime_type == "audio/mpeg":
                    await message.respond(file=response.document)
                await message.delete()
                return
            elif response.photo and response.photo.sender_id != self.client.me.id:
                await message.respond(file=response.photo)
                await message.delete()
                return

        await message.edit("‚ö†Ô∏è –ù–µ –≤–¥–∞–ª–æ—Å—è –∑–Ω–∞–π—Ç–∏ –º–µ–¥—ñ–∞ –∑–∞ —Ü–∏–º –ø–æ—Å–∏–ª–∞–Ω–Ω—è–º. –°–ø—Ä–æ–±—É–π—Ç–µ —â–µ —Ä–∞–∑!")
